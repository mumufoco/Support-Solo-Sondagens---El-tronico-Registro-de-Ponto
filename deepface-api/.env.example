# DeepFace API Environment Variables

#--------------------------------------------------------------------
# FLASK SETTINGS
#--------------------------------------------------------------------
FLASK_ENV=development
SECRET_KEY=change-this-secret-key-in-production
DEBUG=True

#--------------------------------------------------------------------
# SERVER SETTINGS
#--------------------------------------------------------------------
HOST=0.0.0.0
PORT=5000

#--------------------------------------------------------------------
# DEEPFACE MODEL SETTINGS
#--------------------------------------------------------------------
# Model options: VGG-Face, Facenet, Facenet512, OpenFace, DeepFace, DeepID, ArcFace, Dlib, SFace
MODEL_NAME=VGG-Face

# Detector options: opencv, ssd, dlib, mtcnn, retinaface, mediapipe
DETECTOR_BACKEND=opencv

# Distance metric: cosine, euclidean, euclidean_l2
DISTANCE_METRIC=cosine

# Enforce face detection (True/False)
ENFORCE_DETECTION=True

# Align faces before processing (True/False)
ALIGN=True

#--------------------------------------------------------------------
# RECOGNITION THRESHOLDS
#--------------------------------------------------------------------
# Threshold for face recognition (distance)
# Lower is more strict, higher is more permissive
# VGG-Face cosine default: 0.40
THRESHOLD=0.40

#--------------------------------------------------------------------
# FACE DATABASE
#--------------------------------------------------------------------
# Path to store face images
FACES_DB_PATH=../storage/faces

#--------------------------------------------------------------------
# UPLOAD SETTINGS
#--------------------------------------------------------------------
# Maximum file size in bytes (5MB)
MAX_FILE_SIZE=5242880

#--------------------------------------------------------------------
# ANTI-SPOOFING
#--------------------------------------------------------------------
# Enable anti-spoofing detection
ANTI_SPOOFING_ENABLED=True

# Minimum face size in pixels
MIN_FACE_SIZE=80

#--------------------------------------------------------------------
# CORS SETTINGS
#--------------------------------------------------------------------
# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:8000,http://localhost:8080

#--------------------------------------------------------------------
# RATE LIMITING
#--------------------------------------------------------------------
# Enable rate limiting
RATELIMIT_ENABLED=True

# Default rate limit
RATELIMIT_DEFAULT=100 per minute

# Rate limit storage (memory:// or redis://localhost:6379)
RATELIMIT_STORAGE_URL=memory://

#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/deepface_api.log

#--------------------------------------------------------------------
# CACHE SETTINGS
#--------------------------------------------------------------------
# Enable cache for recognition results
CACHE_ENABLED=True

# Cache TTL in seconds (5 minutes)
CACHE_TTL=300
