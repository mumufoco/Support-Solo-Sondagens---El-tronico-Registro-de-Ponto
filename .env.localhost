#--------------------------------------------------------------------
# LOCALHOST ENVIRONMENT CONFIGURATION (Sem Docker)
# Sistema de Registro de Ponto Eletrônico
#
# USO: cp .env.localhost .env
#
# Este arquivo é para rodar a aplicação FORA do Docker,
# usando MySQL e PHP local.
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------
CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------
app.baseURL = 'http://localhost:8080/'
app.indexPage = ''
app.forceGlobalSecureRequests = false
app.appTimezone = 'America/Sao_Paulo'
app.defaultLocale = 'pt-BR'
app.supportedLocales = ['pt-BR']

# ENCRYPTION - Auto-generated by: php spark key:generate
encryption.key = ''

#--------------------------------------------------------------------
# DATABASE (Localhost MySQL)
#--------------------------------------------------------------------
database.default.hostname = localhost
database.default.database = ponto_eletronico
database.default.username = root
database.default.password =
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306
database.default.charset = utf8mb4
database.default.DBCollat = utf8mb4_unicode_ci

# Environment variables for compatibility
DB_HOST = localhost
DB_DATABASE = ponto_eletronico
DB_USERNAME = root
DB_PASSWORD =

#--------------------------------------------------------------------
# CACHE (File-based - Sem Redis)
#--------------------------------------------------------------------
cache.handler = 'file'

#--------------------------------------------------------------------
# SESSION (File-based - Sem Redis)
#--------------------------------------------------------------------
session.driver = 'CodeIgniter\Session\Handlers\FileHandler'
session.cookieName = 'ponto_session'
session.expiration = 7200
session.matchIP = false
session.timeToUpdate = 300
session.regenerateDestroy = false

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------
security.csrfProtection = 'cookie'
security.tokenRandomize = true
security.tokenName = 'csrf_token_name'
security.headerName = 'X-CSRF-TOKEN'
security.cookieName = 'csrf_cookie_name'
security.expires = 7200
security.regenerate = true

#--------------------------------------------------------------------
# EMAIL (Configure if needed)
#--------------------------------------------------------------------
email.protocol = 'smtp'
email.SMTPHost = 'smtp.gmail.com'
email.SMTPUser = 'your-email@gmail.com'
email.SMTPPass = 'your-app-password'
email.SMTPPort = 587
email.SMTPCrypto = 'tls'
email.mailType = 'html'
email.charset = 'utf-8'
email.fromEmail = 'noreply@localhost'
email.fromName = 'Sistema Ponto Eletrônico'

#--------------------------------------------------------------------
# DEEPFACE API (Configure if running locally)
#--------------------------------------------------------------------
DEEPFACE_API_URL = 'http://localhost:5000'
DEEPFACE_API_KEY = 'dev-key'
DEEPFACE_THRESHOLD = 0.40
DEEPFACE_MODEL = 'VGG-Face'
DEEPFACE_DETECTOR = 'opencv'

#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------
logger.threshold = 4

#--------------------------------------------------------------------
# PORTAS (Para referência)
#--------------------------------------------------------------------
# APP_PORT = 8080
# DB_PORT = 3306
