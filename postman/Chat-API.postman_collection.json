{
  "info": {
    "name": "Chat API - Ponto Eletr√¥nico",
    "description": "REST API for WebSocket Chat System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "12345"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost/api/chat",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "YOUR_TOKEN_HERE",
      "type": "string"
    },
    {
      "key": "room_id",
      "value": "1",
      "type": "string"
    },
    {
      "key": "message_id",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Rooms",
      "item": [
        {
          "name": "Get All Rooms",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/rooms",
              "host": ["{{base_url}}"],
              "path": ["rooms"]
            },
            "description": "Get all chat rooms for authenticated user"
          },
          "response": []
        },
        {
          "name": "Create Private Room",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"employee_id\": 7\n}"
            },
            "url": {
              "raw": "{{base_url}}/rooms/private",
              "host": ["{{base_url}}"],
              "path": ["rooms", "private"]
            },
            "description": "Create or get existing private 1-on-1 room"
          },
          "response": []
        },
        {
          "name": "Create Group Room",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Project Team\",\n  \"members\": [5, 7, 9]\n}"
            },
            "url": {
              "raw": "{{base_url}}/rooms/group",
              "host": ["{{base_url}}"],
              "path": ["rooms", "group"]
            },
            "description": "Create a new group chat room"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Messages",
      "item": [
        {
          "name": "Get Messages",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/rooms/{{room_id}}/messages?limit=50&offset=0",
              "host": ["{{base_url}}"],
              "path": ["rooms", "{{room_id}}", "messages"],
              "query": [
                {
                  "key": "limit",
                  "value": "50",
                  "description": "Number of messages to return"
                },
                {
                  "key": "offset",
                  "value": "0",
                  "description": "Pagination offset"
                },
                {
                  "key": "before_id",
                  "value": "",
                  "description": "Get messages before this ID",
                  "disabled": true
                }
              ]
            },
            "description": "Get messages in a room with pagination"
          },
          "response": []
        },
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"Hello, world!\",\n  \"reply_to\": null\n}"
            },
            "url": {
              "raw": "{{base_url}}/rooms/{{room_id}}/messages",
              "host": ["{{base_url}}"],
              "path": ["rooms", "{{room_id}}", "messages"]
            },
            "description": "Send a message to a room"
          },
          "response": []
        },
        {
          "name": "Edit Message",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"Updated message text\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/messages/{{message_id}}",
              "host": ["{{base_url}}"],
              "path": ["messages", "{{message_id}}"]
            },
            "description": "Edit a message (15-minute window)"
          },
          "response": []
        },
        {
          "name": "Delete Message",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/messages/{{message_id}}",
              "host": ["{{base_url}}"],
              "path": ["messages", "{{message_id}}"]
            },
            "description": "Delete a message"
          },
          "response": []
        },
        {
          "name": "Search Messages",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/rooms/{{room_id}}/search?q=hello",
              "host": ["{{base_url}}"],
              "path": ["rooms", "{{room_id}}", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "hello",
                  "description": "Search query"
                }
              ]
            },
            "description": "Search messages in a room"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Reactions",
      "item": [
        {
          "name": "Add Reaction",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"emoji\": \"üëç\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/messages/{{message_id}}/reactions",
              "host": ["{{base_url}}"],
              "path": ["messages", "{{message_id}}", "reactions"]
            },
            "description": "Add or remove emoji reaction (toggle)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Room Management",
      "item": [
        {
          "name": "Mark as Read",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/rooms/{{room_id}}/read",
              "host": ["{{base_url}}"],
              "path": ["rooms", "{{room_id}}", "read"]
            },
            "description": "Mark all messages in room as read"
          },
          "response": []
        },
        {
          "name": "Get Members",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/rooms/{{room_id}}/members",
              "host": ["{{base_url}}"],
              "path": ["rooms", "{{room_id}}", "members"]
            },
            "description": "Get all members of a room"
          },
          "response": []
        },
        {
          "name": "Add Member",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"employee_id\": 9\n}"
            },
            "url": {
              "raw": "{{base_url}}/rooms/{{room_id}}/members",
              "host": ["{{base_url}}"],
              "path": ["rooms", "{{room_id}}", "members"]
            },
            "description": "Add a member to a room (admin only)"
          },
          "response": []
        },
        {
          "name": "Remove Member",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/rooms/{{room_id}}/members/9",
              "host": ["{{base_url}}"],
              "path": ["rooms", "{{room_id}}", "members", "9"]
            },
            "description": "Remove a member from a room (admin only)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Online Users",
      "item": [
        {
          "name": "Get Online Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/online",
              "host": ["{{base_url}}"],
              "path": ["online"]
            },
            "description": "Get list of currently online users"
          },
          "response": []
        }
      ]
    }
  ]
}
