{
    "name": "sistema/ponto-eletronico",
    "description": "Sistema de Ponto Eletrônico Brasileiro - Versão 2.0 com DeepFace",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "ponto eletrônico",
        "registro de ponto",
        "CodeIgniter 4",
        "biometria",
        "facial recognition"
    ],
    "authors": [
        {
            "name": "Sistema de Ponto Eletrônico",
            "email": "dev@pontoeletronico.com.br"
        }
    ],
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^4.4",
        "codeigniter4/shield": "^1.0",
        "phpoffice/phpspreadsheet": "^1.29",
        "tecnickcom/tcpdf": "^6.6",
        "guzzlehttp/guzzle": "^7.8",
        "chillerlan/php-qrcode": "^5.0",
        "firebase/php-jwt": "^6.9",
        "monolog/monolog": "^3.5",
        "vlucas/phpdotenv": "^5.6",
        "ramsey/uuid": "^4.7",
        "league/csv": "^9.12"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "fakerphp/faker": "^1.23",
        "mikey179/vfsstream": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "scripts": {
        "test": "phpunit",
        "post-update-cmd": [
            "@composer dump-autoload"
        ],
        "post-install-cmd": [
            "@composer dump-autoload"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
