#--------------------------------------------------------------------
# TESTING ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = testing

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.baseURL = 'http://localhost:8080/'
app.forceGlobalSecureRequests = false
app.sessionDriver = 'CodeIgniter\Session\Handlers\ArrayHandler'
app.sessionCookieName = 'ci_session_test'
app.sessionExpiration = 7200
app.sessionSavePath = null
app.sessionMatchIP = false
app.sessionTimeToUpdate = 300
app.sessionRegenerateDestroy = false

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

database.default.hostname = 127.0.0.1
database.default.database = ponto_eletronico_test
database.default.username = root
database.default.password = root
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306

database.tests.hostname = 127.0.0.1
database.tests.database = ponto_eletronico_test
database.tests.username = root
database.tests.password = root
database.tests.DBDriver = MySQLi
database.tests.DBPrefix =
database.tests.port = 3306

#--------------------------------------------------------------------
# REDIS
#--------------------------------------------------------------------

redis.default.host = 127.0.0.1
redis.default.port = 6379
redis.default.password = null
redis.default.database = 1
redis.default.timeout = 0

#--------------------------------------------------------------------
# CACHE
#--------------------------------------------------------------------

cache.handler = redis

#--------------------------------------------------------------------
# EMAIL
#--------------------------------------------------------------------

email.protocol = null

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------

encryption.key = hex2bin:0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------

security.csrfProtection = 'cookie'
security.tokenRandomize = true
security.tokenName = 'csrf_token_test'
security.headerName = 'X-CSRF-TOKEN'
security.cookieName = 'csrf_cookie_test'
security.expires = 7200
security.regenerate = true

#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------

logger.threshold = 5

#--------------------------------------------------------------------
# DEEPFACE API
#--------------------------------------------------------------------

deepface.baseURL = http://localhost:5000
deepface.enabled = false
deepface.timeout = 30

#--------------------------------------------------------------------
# GEOLOCATION
#--------------------------------------------------------------------

geolocation.enabled = false
geolocation.required = false

#--------------------------------------------------------------------
# LGPD
#--------------------------------------------------------------------

lgpd.consentRequired = false
lgpd.retentionDays = 365

#--------------------------------------------------------------------
# MTE 671/2021
#--------------------------------------------------------------------

mte.nsr.enabled = true
mte.nsr.algorithm = sha256
